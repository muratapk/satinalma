@model satinalma.Models.product
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h1>Details @Model.product_id</h1>

<div class="container py-5">
    <div class="row">
        <!-- Ürün Görseli -->
        <div class="col-md-6">
            <img src="https://via.placeholder.com/500x500" alt="Ürün Görseli" class="img-fluid">
        </div>

        <!-- Ürün Bilgileri -->
        <div class="col-md-6">
            <h2>Ürün Adı</h2>
            <p class="text-muted">Kategori: Elektronik</p>
            <h3 class="text-success">₺1999.99</h3>

            <p>
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque eget felis vel neque feugiat feugiat ut
                sed nulla.
            </p>

            <ul>
                <li>Ürün Özelliği 1</li>
                <li>Ürün Özelliği 2</li>
                <li>Ürün Özelliği 3</li>
            </ul>

            <div class="d-flex align-items-center">
                <button class="btn btn-primary me-3">Sepete Ekle</button>
                <button class="btn btn-outline-secondary">Favorilere Ekle</button>
            </div>
        </div>
    </div>

    <!-- Ürün Açıklaması ve Yorumlar -->
    <div class="row mt-5">
        <div class="col-12">
            <h4>Ürün Açıklaması</h4>
            <p>
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus eget ante mauris. Vestibulum non felis
                viverra, lobortis elit sit amet, sollicitudin mi. In ac purus eu ipsum sollicitudin interdum.
            </p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <h4>Yorumlar</h4>

            <!-- Yorumlar -->
            <div class="border p-3 mb-3">
                <p><strong>Ali Y.</strong> <small>1 hafta önce</small></p>
                <p>Ürün gerçekten harika! Çok beğendim.</p>
            </div>

            <div class="border p-3 mb-3">
                <p><strong>Aylin K.</strong> <small>3 gün önce</small></p>
                <p>Fiyat/performans açısından çok iyi bir ürün, kesinlikle tavsiye ederim.</p>
            </div>

            <!-- Yorum Yapma -->
            <form>
                <div class="mb-3">
                    <label for="yorum" class="form-label">Yorum Yapın</label>
                    <textarea class="form-control" id="yorum" rows="3" placeholder="Yorumunuzu yazın..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Gönder</button>
            </form>
        </div>
    </div>
</div>