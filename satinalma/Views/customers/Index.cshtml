@model IEnumerable<satinalma.Models.customers>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Müşteri Listesi</h1>

<p>
    <a asp-action="Create">Yeni Müşteri</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.first_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.last_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password_hash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.shipping_address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.billing_address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.first_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.last_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password_hash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.shipping_address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.billing_address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.customer_id">Düzelt</a> |
                <a asp-action="Details" asp-route-id="@item.customer_id">Detay</a> |
                <a asp-action="Delete" asp-route-id="@item.customer_id">Silme</a>
            </td>
        </tr>
}
    </tbody>
</table>
